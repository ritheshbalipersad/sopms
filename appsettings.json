{
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Microsoft.EntityFrameworkCore.Infrastructure": "Warning",
      "System.Net.Http.HttpClient": "Warning"
    },
    "File": {
      "Path": "logs/app.log",
      "Append": true,
      "FileSizeLimitBytes": 10485760,
      "MaxRollingFiles": 5
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=DocRet;Trusted_Connection=True;TrustServerCertificate=True;",
    "entTTSAPConnection": "Server=localhost;Database=entTTSAP;Trusted_Connection=True;TrustServerCertificate=True;",
    "LoginConnection": "Server=localhost;Database=MCRegistrationSA;Trusted_Connection=True;TrustServerCertificate=True;"
  },

  "Kestrel": {
    "Limits": {
      "MaxRequestBodySize": 1073741824
    }
  },

  "StorageSettings": {
    "BasePath": "c:\\SOPMS_Documents"
  },

  "PdfSettings": {
    "DllSearchPaths": [
      "./runtimes/win-{ARCH}/native/libwkhtmltox.dll",
      "./DinkToPdf/{ARCH}/libwkhtmltox.dll"
    ],
    "DefaultPaperSize": "A4",
    "Orientation": "Portrait"
  },
  "Auth": {
    "CookieTimeoutMinutes": 30,
    "SlidingExpiration": true
  },
  "HttpsRedirection": {
    "RedirectPort": 443,
    "HttpsPort": 443
  },
  "Application": {
    "DataProtection": {
      "KeyStoragePath": "./keys",
      "ApplicationDiscriminator": "SOPMSApp"
    }
  }



}