@model SOPMSApp.Models.Area
@{
    ViewData["Title"] = "Edit Area";
}

<div class="container-fluid py-4">
    <h2 class="mb-4"><i class="fas fa-map-marked-alt me-2"></i>Edit Area</h2>

    <div class="card shadow-sm" style="max-width: 500px;">
        <div class="card-body">
            <form asp-area="Admin" asp-controller="AreasAdmin" asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="AreaName" class="form-label">Area Name</label>
                    <input asp-for="AreaName" class="form-control" />
                    <span asp-validation-for="AreaName" class="text-danger small"></span>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-area="Admin" asp-controller="AreasAdmin" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
