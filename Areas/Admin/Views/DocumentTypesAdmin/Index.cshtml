@model List<SOPMSApp.Areas.Admin.Controllers.DocumentTypeItem>
@{
    ViewData["Title"] = "Manage Document Types";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-file-alt me-2"></i>Document Types</h2>
        <a asp-area="Admin" asp-controller="DocumentTypesAdmin" asp-action="Create" class="btn btn-primary"><i class="fas fa-plus me-1"></i> Add Document Type</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">@TempData["Success"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">@TempData["Error"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Count == 0)
            {
                <p class="text-muted mb-0">No document types defined. <a asp-area="Admin" asp-controller="DocumentTypesAdmin" asp-action="Create">Add one</a>.</p>
            }
            else
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Acronym (UDFChar1)</th>
                            <th width="180">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.BulletinName</td>
                                <td>@(item.UDFChar1 ?? "â€”")</td>
                                <td>
                                    <a asp-area="Admin" asp-controller="DocumentTypesAdmin" asp-action="Edit" asp-route-id="@item.BulletinID" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                                    <form asp-area="Admin" asp-controller="DocumentTypesAdmin" asp-action="Delete" asp-route-id="@item.BulletinID" method="post" class="d-inline" onsubmit="return confirm('Delete this document type?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
    <p class="mt-3">
        <a asp-area="Admin" asp-controller="Admin" asp-action="Index"><i class="fas fa-arrow-left me-1"></i>Back to Administration</a>
    </p>
</div>
