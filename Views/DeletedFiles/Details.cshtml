        border-radius: 0.5rem;
    }

    /* Common Elements */
    .file-icon {
        font-size: 4rem;
    }

    .no-file-placeholder {
        opacity: 0.7;
    }

    /* Badge Colors */
    .bg-danger-light {
        background-color: rgba(220, 53, 69, 0.08);
    }

    .bg-primary-light {
        background-color: rgba(13, 110, 253, 0.08);
    }

    .bg-success-light {
        background-color: rgba(25, 135, 84, 0.08);
    }

    .bg-warning-light {
        background-color: rgba(255, 193, 7, 0.08);
    }

    .bg-info-light {
