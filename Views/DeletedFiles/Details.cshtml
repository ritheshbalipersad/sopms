@model SOPMSApp.Models.DeletedFileLog

@{
    ViewData["Title"] = "Deleted Document Details";

    // ✅ Get the actual file name
    string displayFile = !string.IsNullOrWhiteSpace(Model.FileName) && Model.FileName != "N/A"
        ? Model.FileName
        : null;

    // ✅ Fix the file URL path to include /sop/ + your correct folder
    string fileUrl = !string.IsNullOrWhiteSpace(displayFile)
        ? Url.Content($"~/Archive/Deleted/PDFs/{displayFile}")
        : null;

    bool isPdf = !string.IsNullOrWhiteSpace(displayFile) &&
                System.IO.Path.GetExtension(displayFile).Equals(".pdf", StringComparison.OrdinalIgnoreCase);

    // ✅ Enhanced file type detection
    var fileType = "Document";
    var fileIcon = "bi-file-earmark-text";
    var fileBadge = "bg-secondary-light text-secondary";
    var previewAvailable = false;
    var fileError = ViewBag.FileError as string;

    if (!string.IsNullOrEmpty(displayFile))
    {
        var ext = System.IO.Path.GetExtension(displayFile).ToLower();
        (fileType, fileIcon, fileBadge, previewAvailable) = ext switch
        {
            ".pdf" => ("PDF Document", "bi-file-earmark-pdf", "bg-danger-light text-danger", true),
            ".doc" or ".docx" => ("Word Document", "bi-file-earmark-word", "bg-primary-light text-primary", false),
            ".xls" or ".xlsx" => ("Excel Spreadsheet", "bi-file-earmark-excel", "bg-success-light text-success", false),
            ".ppt" or ".pptx" => ("PowerPoint", "bi-file-earmark-ppt", "bg-warning-light text-warning", false),
            ".mp4" => ("MP4 Video", "bi-file-earmark-play", "bg-info-light text-info", true),
            ".mov" => ("QuickTime Video", "bi-file-earmark-play", "bg-info-light text-info", true),
            ".avi" => ("AVI Video", "bi-file-earmark-play", "bg-info-light text-info", true),
            _ => ("Document", "bi-file-earmark-text", "bg-secondary-light text-secondary", false)
        };
    }
}

<div class="container-fluid py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="h5 mb-0">
                    <i class="bi bi-file-earmark-x me-2"></i>Deleted Document Audit
                </h2>
                <a asp-action="Index" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-arrow-left me-1"></i>Back to Deletion Log
                </a>
            </div>
        </div>

        <div class="card-body">
            <!-- File Status Alert -->
            @if (!string.IsNullOrEmpty(fileError))
            {
                <div class="alert alert-warning d-flex align-items-center mb-4">
                    <i class="bi bi-exclamation-triangle-fill me-3 fs-4"></i>
                    <div>
                        <h5 class="alert-heading mb-2">Document File Not Found</h5>
                        <p class="mb-0">System searched in: PDFs, Originals, and videos folders</p>
                    </div>
                </div>
            }

            <div class="row mb-4">
                <!-- Document Metadata -->
                <div class="col-md-6">
                    <div class="card mb-3 h-100">
                        <div class="card-header bg-light">
                            <h3 class="h6 mb-0"><i class="bi bi-card-text me-2"></i>Document Record</h3>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">SOP Number</dt>
                                <dd class="col-sm-8">@Model.SOPNumber</dd>

                                <dt class="col-sm-4">Original File</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.OriginalFileName))
                                    {
                                        <span>@Model.OriginalFileName</span>
                                        <small class="text-muted d-block mt-1">Originally uploaded file name</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not recorded</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Archived File</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.FileName))
                                    {
                                        <span>@Model.FileName</span>
                                        <small class="text-muted d-block mt-1">System generated archive name</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not recorded</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <!-- Deletion Details -->
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-header bg-light">
                            <h3 class="h6 mb-0"><i class="bi bi-clock-history me-2"></i>Deletion Audit</h3>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Deleted By</dt>
                                <dd class="col-sm-8">@Model.DeletedBy</dd>

                                <dt class="col-sm-4">Deleted On</dt>
                                <dd class="col-sm-8">@Model.DeletedOn.ToString("dd MMM yyyy HH:mm")</dd>

                                <dt class="col-sm-4">Reason</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrWhiteSpace(Model.Reason))
                                    {
                                        <div class="border-start border-3 ps-3 border-danger">
                                            @Model.Reason
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">No reason provided</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- File Preview Section -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h3 class="h6 mb-0">
                        <i class="bi bi-file-earmark-arrow-down me-2"></i>Recoverable Content
                    </h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrWhiteSpace(fileUrl))
                    {
                        if (fileType.Contains("Video"))
                        {
                            <div class="video-preview-container">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h5 class="mb-0">@fileType</h5>
                                </div>

                                <div class="ratio ratio-16x9 mb-3 bg-dark rounded">
                                    <video controls class="w-100 h-100">
                                        <source src="@fileUrl" type="video/@System.IO.Path.GetExtension(displayFile).Replace(".", "")">
                                        Your browser does not support HTML5 video.
                                    </video>
                                </div>

                                <div class="file-meta d-flex justify-content-between">
                                    <span class="text-muted">
                                        @displayFile
                                        <span class="badge @fileBadge ms-2">Video Archive</span>
                                    </span>
                                    <small class="text-muted">Right click video for more options</small>
                                </div>
                            </div>
                        }
                        else if (isPdf)
                        {
                            <div class="pdf-preview-container text-center p-4">
                                <div class="file-icon mb-3">
                                    <i class="bi @fileIcon text-danger fs-1"></i>
                                </div>

                                <h5>@fileType</h5>
                                <p class="text-muted mb-3">
                                    @displayFile
                                    <span class="badge @fileBadge ms-2">PDF Archive</span>
                                </p>

                                <div class="d-flex justify-content-center gap-2">
                                    <a href="@fileUrl" class="btn btn-outline-danger" >
                                        <i class="bi bi-eye me-2"></i>View PDF
                                    </a>
                                    <a href="@fileUrl" class="btn btn-outline-secondary" download>
                                        <i class="bi bi-download me-2"></i>Download
                                    </a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="file-preview-container text-center p-4">
                                <div class="file-icon mb-3">
                                    <i class="bi @fileIcon fs-1"></i>
                                </div>

                                <h5>@fileType</h5>
                                <p class="text-muted mb-3">
                                    @displayFile
                                    <span class="badge @fileBadge ms-2">
                                        @(fileUrl.Contains("/Originals/") ? "Original File" : "Archived File")
                                    </span>
                                </p>

                                <div class="d-flex justify-content-center gap-2">
                                    <a href="@fileUrl" class="btn btn-primary" download>
                                        <i class="bi bi-download me-2"></i>Download
                                    </a>
                                    @if (previewAvailable)
                                    {
                                        <a href="@fileUrl" class="btn btn-outline-secondary" target="_blank">
                                            <i class="bi bi-display me-2"></i>Try View
                                        </a>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="no-file-placeholder text-center py-5">
                            <i class="bi bi-file-earmark-x text-muted fs-1"></i>
                            <h5 class="mt-3 mb-2">No Recoverable Files</h5>
                            <p class="text-muted">The system couldn't locate this document in any archive folders</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Admin Actions -->
            @if (User.IsInRole("Admin"))
            {
                <div class="d-flex justify-content-end mt-4 border-top pt-3">
                    <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#permanentDeleteModal">
                        <i class="bi bi-trash3 me-2"></i>Permanent Delete Record
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<!-- Permanent Delete Modal -->
@if (User.IsInRole("Admin"))
{
    <div class="modal fade" id="permanentDeleteModal" tabindex="-1" aria-labelledby="permanentDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content border-danger">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="permanentDeleteModalLabel">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirm Permanent Deletion
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger bg-danger-light border-danger mb-4">
                        <div class="d-flex">
                            <i class="bi bi-exclamation-triangle-fill text-danger fs-4 me-3"></i>
                            <div>
                                <h5 class="alert-heading">Final Warning: This Cannot Be Undone</h5>
                                <p class="mb-0">This will permanently remove this audit record from the system.</p>
                                @if (!string.IsNullOrEmpty(fileUrl))
                                {
                                    <p class="mb-0 mt-2"><strong>Note:</strong> The physical file will remain in the archive folder.</p>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="card mb-0">
                        <div class="card-body">
                            <h6 class="mb-3">Record Details</h6>
                            <dl class="row small mb-0">
                                <dt class="col-sm-4">Record ID</dt>
                                <dd class="col-sm-8">@Model.Id</dd>

                                <dt class="col-sm-4">SOP Number</dt>
                                <dd class="col-sm-8">@Model.SOPNumber</dd>

                                <dt class="col-sm-4">Original File</dt>
                                <dd class="col-sm-8">@(Model.OriginalFileName ?? "Not recorded")</dd>

                                <dt class="col-sm-4">Archived File</dt>
                                <dd class="col-sm-8">@(Model.FileName ?? "Not recorded")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i>Cancel
                    </button>
                    <form asp-action="PermanentDelete" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash3-fill me-1"></i>Delete Record
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

