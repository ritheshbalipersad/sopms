    .video-preview-container {
        max-width: 800px;
        margin: 0 auto;
    }

    /* PDF Preview Styles */
    .pdf-preview-container {
        max-width: 400px;
        margin: 0 auto;
    }

    /* Generic File Preview Styles */
    .file-preview-container {
        max-width: 400px;
        margin: 0 auto;
