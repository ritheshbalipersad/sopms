@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        // Form validation with button state management
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    // Store original button state for each form
                    const submitBtn = form.querySelector('button[type="submit"]');
                    const originalBtnHTML = submitBtn ? submitBtn.innerHTML : '';

                    form.addEventListener('submit', function (event) {
                        const fileInput = document.getElementById('RevisedOriginalFile');
                        if (fileInput && fileInput.files.length && fileInput.files[0].name !== '@Model.OriginalFile') {
                            alert('Filename must match: @Model.OriginalFile');
                            fileInput.value = '';
                            event.preventDefault();
                            event.stopPropagation();
                            return;
                        }

                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                            form.classList.add('was-validated')
                            return;
                        }

                        // Form is valid, show processing state
                        event.preventDefault(); // Prevent immediate submission to show processing state

                        // Change button to processing state
                        if (submitBtn) {
                            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing...';
                            submitBtn.disabled = true;
                        }

                        // Validate file before submitting
                        if (fileInput) {
                            const isValidFile = !fileInput.files.length || fileInput.files[0].name === '@Model.OriginalFile';
                            if (!isValidFile) {
                                // Restore button if file validation fails
                                if (submitBtn) {
                                    submitBtn.innerHTML = originalBtnHTML;
                                    submitBtn.disabled = false;
                                }
                                alert('Filename must match: @Model.OriginalFile');
                                fileInput.value = '';
                                fileInput.focus();
                                return;
                            }
                        }

                        // Small delay to ensure processing state is visible, then submit
                        setTimeout(() => {
                            // Remove the event listener temporarily to prevent recursion
                            form.removeEventListener('submit', arguments.callee);

                            // Submit the form
                            form.submit();

                            // If we get here, form submission didn't cause page reload (AJAX scenario)
                            // In that case, restore button after a reasonable timeout
                            setTimeout(() => {
                                if (submitBtn) {
                                    submitBtn.innerHTML = originalBtnHTML;
                                    submitBtn.disabled = false;
                                }
                                // Re-add the event listener
                                form.addEventListener('submit', arguments.callee);
                            }, 5000); // Restore after 5 seconds if no page reload
                        }, 500); // 500ms delay to show processing state

                        form.classList.add('was-validated')
                    }, false)
                })
        })();

        // Effective date calculation
        function setEffectiveDate() {
            const selectedYears = document.querySelector('input[name="yearOption"]:checked')?.value;
            if (!selectedYears) {
                document.getElementById("EffectiveDate").value = "";
                document.getElementById("EffectiveDateDisplay").value = "";
                return;
            }

            const today = new Date();
            today.setFullYear(today.getFullYear() + parseInt(selectedYears));

            const options = { year: 'numeric', month: 'long', day: 'numeric' };
            const displayDate = today.toLocaleDateString(undefined, options);

            const yyyy = today.getFullYear();
            const mm = String(today.getMonth() + 1).padStart(2, '0');
            const dd = String(today.getDate()).padStart(2, '0');
            document.getElementById("EffectiveDate").value = `${yyyy}-${mm}-${dd}`;
            document.getElementById("EffectiveDateDisplay").value = displayDate;
        }

        document.addEventListener('DOMContentLoaded', function() {
            const effectiveDate = '@Model.EffectiveDate?.ToString("yyyy-MM-dd")';
            if (effectiveDate) {
                const date = new Date(effectiveDate);
                const today = new Date();
                const diffYears = date.getFullYear() - today.getFullYear();
                if (diffYears > 0 && diffYears <= 7) {
                    document.getElementById(`yearOption${diffYears}`).checked = true;
                    setEffectiveDate();
                }
            }

            // Add event listeners to year options
            const yearRadios = document.querySelectorAll('input[name="yearOption"]');
            yearRadios.forEach(radio => {
                radio.addEventListener('change', setEffectiveDate);
            });

            // Set initial effective date if no selection yet
            if (!document.querySelector('input[name="yearOption"]:checked')) {
                setEffectiveDate();
            }
        });
    </script>
}

@functions {
    private (string Url, long LastModifiedTicks) GetFileUrlWithTimestamp(string fileName, string docType = null)
    {
        if (string.IsNullOrWhiteSpace(fileName))
        {
            _logger.LogWarning("Empty filename provided");
            return (null, DateTime.Now.Ticks);
        }

        try
        {
            var safeFileName = System.IO.Path.GetFileName(fileName);
            var fileExt = System.IO.Path.GetExtension(safeFileName).ToLower();
            string fileUrl = null;

            if (fileExt == ".pdf")
                fileUrl = Url.Action("GetPdf", "FileAccess", new { fileName = safeFileName, docType });
            else if (new[] { ".mp4", ".webm", ".ogg", ".avi", ".mov" }.Contains(fileExt))
                fileUrl = Url.Action("Videos", "FileAccess", new { fileName = safeFileName });
            else if (new[] { ".doc", ".docx", ".xls", ".xlsx", ".ppt", ".pptx" }.Contains(fileExt))
                fileUrl = Url.Action("Originals", "FileAccess", new { docType, fileName = safeFileName });

            if (!string.IsNullOrEmpty(fileUrl))
                return ($"{fileUrl}&v={DateTime.Now.Ticks}", DateTime.Now.Ticks);

            _logger.LogWarning("Could not generate file URL for: {FileName}", fileName);
        }
        catch (Exception ex)
        {
            _logger.LogError(ex, "Error generating file URL for {FileName}", fileName);
        }

        return (null, DateTime.Now.Ticks);
    }
}