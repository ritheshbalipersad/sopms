<script>
    // Initialize AOS animations
    AOS.init({
        duration: 800,
        once: true,
        offset: 100
    });

    // Initialize all dropdowns and tooltips
    $(document).ready(function() {
        // Initialize Bootstrap components
        $('.dropdown-toggle').dropdown();

        // Floating dashboard animation
        $('.floating-dashboard .dashboard-card').each(function(index) {
            $(this).css({
                'animation-delay': (index * 0.2) + 's'
            });
        });

        // Upload warning modal functionality
        var targetUrl = null;
        $(".upload-warning-link").on("click", function(e) {
            e.preventDefault();
            targetUrl = $(this).attr("href");
            var warningModal = new bootstrap.Modal(document.getElementById("fileWarningModal"));
            warningModal.show();
        });

        $("#fileWarningProceedBtn").on("click", function() {
            if (targetUrl) {
                var modalEl = document.getElementById("fileWarningModal");
                var bsModal = bootstrap.Modal.getInstance(modalEl);
                bsModal.hide();
                window.location.href = targetUrl;
            }
        });

        // Add scroll animations for elements
        $(window).scroll(function() {
            $('.feature-card').each(function() {
                var position = $(this).offset().top;
                var scrollPosition = $(window).scrollTop() + $(window).height();

                if (position < scrollPosition - 50) {
                    $(this).addClass('animate-in');
                }
            });
        });
    });
</script>