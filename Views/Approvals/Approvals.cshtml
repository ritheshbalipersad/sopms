            document.querySelectorAll('.view-reason-btn').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    e.preventDefault();
                    e.stopPropagation();
                });
            });
        },
        
        initDeleteAllHandlers: function() {
            // Select All button
            document.getElementById('selectAllDeletions')?.addEventListener('click', () => {
                document.querySelectorAll('.deletion-row').forEach(row => {
                    row.classList.add('selected');
                });
                this.updateDeleteAllButton();
            });
            
            // Deselect All button
            document.getElementById('deselectAllDeletions')?.addEventListener('click', () => {
                document.querySelectorAll('.deletion-row').forEach(row => {
                    row.classList.remove('selected');
                });
                this.updateDeleteAllButton();
            });
            
            // Individual row selection toggle
            document.querySelectorAll('.deletion-row').forEach(row => {
                row.addEventListener('click', (e) => {
                    if (!e.target.closest('button, a, input, .btn, .form-control')) {
                        row.classList.toggle('selected');
                        this.updateDeleteAllButton();
                    }
                });
            });
            
            // Delete All Selected button
            document.getElementById('deleteAllSelected')?.addEventListener('click', (e) => {
                e.preventDefault();
                const selectedRows = document.querySelectorAll('.deletion-row.selected');
                
                if (selectedRows.length === 0) {
                    this.showAlert('No documents selected for deletion.', 'warning');
                    return;
                }
                
                this.confirmDeleteAll(selectedRows);
            });
        },
        
        updateDeleteAllButton: function() {
            const selectedRows = document.querySelectorAll('.deletion-row.selected');
            const deleteAllBtn = document.getElementById('deleteAllSelected');
            const selectedCount = document.getElementById('selectedCount');
            
            if (deleteAllBtn && selectedCount) {
                deleteAllBtn.disabled = selectedRows.length === 0;
                selectedCount.textContent = selectedRows.length;
            }
        },
        
        confirmDeleteAll: function(selectedRows) {
            const selectedCount = selectedRows.length;
            const documentNames = Array.from(selectedRows).map(row => {
                const cell = row.querySelector('td:nth-child(2)');
                return cell?.querySelector('.fw-medium')?.textContent || 
                       cell?.textContent?.trim() || 
                       'Unknown Document';
            });
            
            // Create confirmation modal HTML if it doesn't exist
            if (!document.getElementById('deleteAllConfirmationModal')) {
                const modalHtml = `
                    <div class="modal fade" id="deleteAllConfirmationModal" tabindex="-1">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header bg-danger text-white">
                                    <h5 class="modal-title">
                                        <i class="fas fa-exclamation-triangle me-2"></i>Confirm Bulk Deletion
                                    </h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="alert alert-danger">
                                        <i class="fas fa-skull-crossbones fa-lg me-2"></i>
                                        <strong>Warning: This action cannot be undone!</strong>
                                    </div>
                                    
                                    <p>You are about to delete <strong class="text-danger">${selectedCount} document(s)</strong> permanently.</p>
                                    
                                    <div class="selected-documents-list mb-3" style="max-height: 200px; overflow-y: auto;">
                                        <ul class="list-group">
                                            ${documentNames.map((name, index) => `
                                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                                    <span>${index + 1}. ${name}</span>
                                                    <span class="badge bg-danger rounded-pill">DELETE</span>
                                                </li>
                                            `).join('')}
                                        </ul>
                                    </div>
                                    
                                    <div class="form-check mb-3">
                                        <input class="form-check-input" type="checkbox" id="confirmPermanentDelete">
                                        <label class="form-check-label text-danger fw-bold" for="confirmPermanentDelete">
                                            I understand this will permanently delete all selected documents
                                        </label>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                        <i class="fas fa-times me-1"></i> Cancel
                                    </button>
                                    <button type="button" class="btn btn-danger" id="confirmBulkDeleteBtn" disabled>
                                        <i class="fas fa-trash-alt me-1"></i> Delete All (${selectedCount})
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                
                document.body.insertAdjacentHTML('beforeend', modalHtml);
            } else {
                // Update existing modal content
                const modalBody = document.querySelector('#deleteAllConfirmationModal .modal-body');
                const confirmBtn = document.getElementById('confirmBulkDeleteBtn');
                
                modalBody.querySelector('p strong').textContent = `${selectedCount} document(s)`;
                
                const listContainer = modalBody.querySelector('.selected-documents-list ul');
                listContainer.innerHTML = documentNames.map((name, index) => `
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>${index + 1}. ${name}</span>
                        <span class="badge bg-danger rounded-pill">DELETE</span>
                    </li>
                `).join('');
                
                confirmBtn.innerHTML = `<i class="fas fa-trash-alt me-1"></i> Delete All (${selectedCount})`;
                confirmBtn.disabled = true;
            }
            
            // Show modal
            const modal = new bootstrap.Modal(document.getElementById('deleteAllConfirmationModal'));
            modal.show();
            
            // Handle confirmation checkbox
            const confirmCheckbox = document.getElementById('confirmPermanentDelete');
            const confirmBulkDeleteBtn = document.getElementById('confirmBulkDeleteBtn');
            
            confirmCheckbox.checked = false;
            confirmCheckbox.addEventListener('change', function() {
                confirmBulkDeleteBtn.disabled = !this.checked;
            });
            
            // Handle bulk delete confirmation
            confirmBulkDeleteBtn.addEventListener('click', () => {
                if (!confirmCheckbox.checked) return;
                
                this.executeBulkDelete(selectedRows);
                modal.hide();
            });
        },
        
        executeBulkDelete: function(selectedRows) {
            const selectedIds = Array.from(selectedRows).map(row => {
                return row.dataset.docId || row.querySelector('input[name="id"]')?.value;
            }).filter(id => id);
            
            if (selectedIds.length === 0) {
                this.showAlert('No valid document IDs found.', 'danger');
                return;
            }
            
            const deleteAllBtn = document.getElementById('deleteAllSelected');
            const originalText = deleteAllBtn.innerHTML;
            
            // Show loading state
            deleteAllBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span> Deleting...';
            deleteAllBtn.disabled = true;
            
            // Get anti-forgery token
            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            
            // Submit all deletions
            const promises = selectedIds.map(id => {
                return fetch('/Approvals/ApproveDeletion', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': token
                    },
                    body: `id=${encodeURIComponent(id)}`
                });
            });
            
            // Wait for all deletions to complete
            Promise.all(promises)
                .then(responses => {
                    const successful = responses.filter(r => r.ok).length;
                    const failed = responses.length - successful;
                    
                    // Show result summary
                    if (failed === 0) {
                        this.showAlert(`Successfully deleted ${successful} document(s).`, 'success');
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        const message = successful > 0 
                            ? `Partially completed: ${successful} deleted, ${failed} failed.` 
                            : `Failed to delete any documents.`;
                        
                        this.showAlert(message, 'warning');
                        setTimeout(() => location.reload(), 2000);
                    }
                })
                .catch(error => {
                    console.error('Bulk delete error:', error);
                    this.showAlert('An error occurred during bulk deletion.', 'danger');
                    
                    // Restore button state
                    deleteAllBtn.innerHTML = originalText;
                    deleteAllBtn.disabled = false;
                });
        },
        
        confirmDeletion: function(form, docName) {
            const documentToDeleteName = document.getElementById('documentToDeleteName');
            const confirmBtn = document.getElementById('confirmDeletionBtn');
            
            if (!documentToDeleteName || !confirmBtn) {
                console.error('Confirmation modal elements not found');
                this.showAlert('Error: Confirmation dialog not available', 'danger');
                return;
            }
            
            documentToDeleteName.textContent = docName;
            
            const modal = new bootstrap.Modal(document.getElementById('confirmDeletionModal'));
            modal.show();
            
            // Remove previous listeners and add new one
            confirmBtn.replaceWith(confirmBtn.cloneNode(true));
            const newConfirmBtn = document.getElementById('confirmDeletionBtn');
            
            newConfirmBtn.addEventListener('click', () => {
                this.setButtonLoading(newConfirmBtn, true);
                form.submit();
            });
        },
        
        initTooltips: function() {
            const tooltipTriggerList = [].slice.call(
                document.querySelectorAll('[data-bs-toggle="tooltip"]')
            );
            tooltipTriggerList.forEach(tooltipTriggerEl => {
                new bootstrap.Tooltip(tooltipTriggerEl);
            });
            
            console.log('Tooltips initialized');
        },
        
        initGlobalHandlers: function() {
            window.addEventListener('error', (e) => {
                console.error('Global error:', e.error);
            });
            
            window.addEventListener('beforeunload', () => {
                this.destroy();
            });
            
            document.addEventListener('hidden.bs.modal', () => {
                this.stopAllVideos();
            });
        },
        
        setButtonLoading: function(button, isLoading) {
            if (isLoading) {
                const originalHTML = button.innerHTML;
                button.dataset.originalHtml = originalHTML;
                button.disabled = true;
                button.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Processing...';
            } else if (button.dataset.originalHtml) {
                button.disabled = false;
                button.innerHTML = button.dataset.originalHtml;
                delete button.dataset.originalHtml;
            }
        },
        
        showAlert: function(message, type = 'info') {
            const toastContainer = document.querySelector('.alerts-container') || document.body;
            const toastId = 'toast-' + Date.now();
            
            const toastHtml = `
                <div id="${toastId}" class="toast align-items-center text-white bg-${type} border-0" role="alert">
                    <div class="d-flex">
                        <div class="toast-body">
                            ${message}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                </div>
            `;
            
            const tempDiv = document.createElement('div');
            tempDiv.innerHTML = toastHtml.trim();
            const toastElement = tempDiv.firstChild;
            
            toastContainer.appendChild(toastElement);
            
            const toast = new bootstrap.Toast(toastElement, {
                autohide: true,
                delay: 5000
            });
            
            toast.show();
            
            toastElement.addEventListener('hidden.bs.toast', () => {
                toastElement.remove();
            });
        },
        
        destroy: function() {
            this.stopAllVideos();
            this.activeVideo = null;
            this.initialized = false;
            
            const tooltips = document.querySelectorAll('[data-bs-toggle="tooltip"]');
            tooltips.forEach(el => {
                const instance = bootstrap.Tooltip.getInstance(el);
                if (instance) {
                    instance.dispose();
                }
            });
        }
    };
    
    // Initialize when DOM is ready
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', () => ApprovalDashboard.init());
    } else {
        ApprovalDashboard.init();
    }
    
    // Handle popovers
    document.addEventListener('DOMContentLoaded', function() {
        const popoverTriggerList = [].slice.call(
            document.querySelectorAll('[data-bs-toggle="popover"]')
        );
        popoverTriggerList.map(function (popoverTriggerEl) {
            return new bootstrap.Popover(popoverTriggerEl, {
                trigger: 'focus',
                html: true
            });
        });
    });

    // Fallback confirmDelete function
    function confirmDelete(id, documentName = 'this document') {
        if (confirm(`Are you sure you want to delete "${documentName}"? This action cannot be undone.`)) {
            console.log(`User confirmed deletion of document ${id}`);
            
            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            if (!token) {
                console.error('Anti-forgery token not found');
                ApprovalDashboard.showAlert('Security token missing. Please refresh the page.', 'danger');
                return;
            }
            
            const originalText = event.target.innerHTML;
            event.target.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Deleting...';
            event.target.disabled = true;
            
            fetch(`/Approvals/Delete/${id}`, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': token,
                    'Content-Type': 'application/json'
                }
            }).then(response => {
                if (response.ok) {
                    ApprovalDashboard.showAlert('Document deleted successfully', 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    throw new Error(`HTTP ${response.status}`);
                }
            }).catch(error => {
                console.error('Delete failed:', error);
                ApprovalDashboard.showAlert('Delete failed. Please try again.', 'danger');
                event.target.innerHTML = originalText;
                event.target.disabled = false;
            });
        }
    }
</script>
}

