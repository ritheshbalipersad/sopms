@inject IWebHostEnvironment HostingEnvironment

<div class="container-fluid px-4">

    <!-- Alert Messages -->
      <div class="alerts-container">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success fw-bold alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning fw-bold alert-dismissible fade show" role="alert">
                @TempData["Warning"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger fw-bold alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>

    <!-- Page Header -->
    <div class="page-header d-flex justify-content-between align-items-center mb-4 mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="page-title fw-bold mb-0">
                <i class="fas fa-check-circle text-primary me-2"></i>
                Approvals Module
            </h1>
        </div>

        @if (User.Identity.IsAuthenticated)
        {
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-@(User.IsInRole("Intern") || User.IsInRole("MANAGER") ? "tachometer-alt" : "home") me-2"></i>
                @(User.IsInRole("Intern") || User.IsInRole("MANAGER") ? "Dashboard" : "Home")
            </a>
        }
       
    </div>

    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin") || User.IsInRole("MANAGER") || User.IsInRole("Manager"))
    {
            <!-- Pending Document Approvals Section -->
           <div class="approval-section mb-4">
           <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h2 class="section-title mb-0">
                        <i class="fas fa-file-signature me-2"></i>Pending Document Approvals
                    </h2>
                    <span class="badge bg-white text-primary">@Model.PendingApprovals.Count items</span>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>SOP Number</th>
                                <th>File Name</th>
                                <th>Uploaded By</th>
                                <th>Dept Manager</th>
                                <th>Version</th>
                                <th>Last Review</th>
                                <th>Upload Date</th>
                                <th>Next Review</th>
                                <th>Department</th>
                                <th>Area</th>
                                <th>Status / Returned Date</th>
                                <th class="text-center">Views</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.PendingApprovals.Count > 0)
                            {
                                @foreach (var doc in Model.PendingApprovals)
                                {
                                    var fileInfo = GetFileInfo(doc);
                                    bool isVideo = fileInfo.IsVideo;
                                    bool isPdf = fileInfo.IsPdf;
                                
                                    var selectedFileName = !string.IsNullOrWhiteSpace(doc.FileName) && doc.FileName != "N/A"
                                        ? doc.FileName
                                        : doc.OriginalFile;

                                    var pdfUrl = isPdf 
                                        ? Url.Action("GetPdf", "FileAccess", new { fileName = selectedFileName, docType = doc.DocType }) 
                                        : "#";

                                    var videoUrl = isVideo ? Url.Action("Videos", "FileAccess", new { fileName = doc.OriginalFile }) : "#";
                                
                                    <tr data-video-url="@videoUrl">
                                        <td>@doc.SopNumber</td>
                                        <td class="text-truncate" style="max-width: 200px;" title="@doc.OriginalFile">
                                            @doc.OriginalFile
                                        </td>
                                        <td>@doc.Author</td>
                                        <td>@doc.DepartmentSupervisor</td>
                                        <td>@doc.Revision</td>
                                        <td>@doc.LastReviewDate?.ToString("dd MMM yyyy")</td>
                                        <td>@doc.UploadDate.ToString("yyyy-MM-dd")</td>
                                        <td>@doc.EffectiveDate?.ToString("dd MMM yyyy")</td>
                                        <td>@doc.Department</td>
                                        <td>@doc.Area</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(doc.ReviewStatus) && doc.ReviewStatus == "Returned")
                                            {
                                                <span class="badge bg-warning text-dark">
                                                    Returned (@doc.ReturnedDate?.ToString("dd MMM yyyy"))
                                                </span>
                                            }
                                            else if (doc.Status == "Pending Admin Approval")
                                            {
                                                <span class="badge bg-info text-dark">Pending Admin</span>
                                            }
                                            else if (doc.Status == "Pending Manager Approval")
                                            {
                                                <span class="badge bg-primary text-white">Pending Manager</span>
                                            }
                                            else if (doc.Status == "Approved")
                                            {
                                                <span class="badge bg-success">Approved</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@doc.Status</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm" role="group">
                                                @if (isPdf)
                                                {
                                                    <a href="@pdfUrl" class="btn btn-outline-secondary" title="View PDF">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                }
                                                else if (isVideo)
                                                {
                                                    <button type="button" class="btn btn-outline-dark play-inline-video" title="Play Video">
                                                        <i class="fas fa-play"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <a href="@Url.Action("Download", "FileUpload", new { id = doc.Id, rev = doc.Revision })" 
                                                       class="btn btn-outline-primary" title="Download">
                                                        <i class="fas fa-download"></i>
                                                    </a>
                                                }
                                                <a asp-action="History" asp-route-docRegisterId="@doc.Id" 
                                                   class="btn btn-outline-info" title="View History">
                                                    <i class="fas fa-history"></i>
                                                </a>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <div class="action-buttons d-flex justify-content-center gap-2">
                                                @if (doc.Status != "Approved")
                                                {
                                                    @if (UserHasRole("Manager", "MANAGER") && 
                                                         (doc.Status == "Pending Approval" || doc.Status == "Pending Manager Approval" || doc.Status == "Under Review"))
                                                    {
                                                        <form asp-controller="Approvals" asp-action="ApproveDocument" method="post" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="sopNumber" value="@doc.SopNumber" />
                                                            <button type="submit" class="btn btn-sm btn-success" title="Approve for Admin Review">
                                                                <i class="fas fa-check"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                    else if (UserHasRole("Admin", "ADMIN") && 
                                                            (doc.Status == "Pending Approval" || doc.Status == "Pending Admin Approval" || doc.Status == "Under Review"))
                                                    {
                                                        <form asp-controller="Approvals" asp-action="ApproveDocument" method="post" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="sopNumber" value="@doc.SopNumber" />
                                                            <button type="submit" class="btn btn-sm btn-success" title="Approve Final">
                                                                <i class="fas fa-check"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                
                                                    <button type="button" class="btn btn-sm btn-danger reject-btn" 
                                                            data-sop="@doc.SopNumber" 
                                                            data-doc-name="@doc.OriginalFile"
                                                            title="Return for Review">
                                                        <i class="fas fa-undo"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <span class="text-muted small">No actions</span>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="12" class="text-center py-4 text-muted">
                                        <i class="fas fa-inbox me-2"></i>No documents pending approval
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

        @functions {
            private bool UserHasRole(params string[] roles)
            {
                return roles.Any(role => User.IsInRole(role));
            }
        }

            <!-- Pending Deletions Section -->
        <!-- Pending Deletions Section -->
        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
            <div class="deletion-section mb-5">
                <div class="card shadow-lg border-danger">
                    <div class="card-header bg-danger bg-gradient text-white py-3 border-bottom border-3 border-danger">
                        <div class="d-flex justify-content-between align-items-center">
                            <h2 class="section-title mb-0">
                                <i class="fas fa-trash-alt me-2"></i>Pending Deletion Approvals
                                <small class="fs-6 text-white-50 ms-2">Requires Admin Approval</small>
                            </h2>
                            <div>
                                <span class="badge bg-white text-danger fs-6 px-3 py-2">
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    @Model.PendingDeletions.Count Pending
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        @if (Model.PendingDeletions.Count > 0)
                        {
                            <div class="alert alert-warning border-0 rounded-0 m-0 border-bottom border-warning">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-exclamation-circle fa-lg me-3"></i>
                                    <div>
                                        <strong>Warning:</strong> These documents are pending permanent deletion. 
                                        Once approved, they cannot be recovered.
                                    </div>
                                </div>
                            </div>
                    
                            <div class="table-responsive">
                                <table class="table table-hover table-striped mb-0">
                                    <thead class="table-danger">
                                        <tr>
                                            <th width="12%">SOP Number</th>
                                            <th width="20%">Document</th>
                                            <th width="12%">Requested By</th>
                                            <th width="8%" class="text-center">Version</th>
                                            <th width="10%" class="text-center">Department</th>
                                            <th width="18%" class="text-center">Deletion Reason</th>
                                            <th width="10%" class="text-center">Preview</th>
                                            <th width="10%" class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var doc in Model.PendingDeletions)
                                        {
                                            var fileInfo = GetFileInfo(doc);
                                            bool isVideo = fileInfo.IsVideo;
                                            bool isPdf = fileInfo.IsPdf;
                                
                                            // Get secure file URLs
                                            var pdfUrl = isPdf 
                                                ? Url.Action("GetPdf", "FileAccess", new { fileName = doc.OriginalFile, docType = doc.DocType }) 
                                                : "#";
                                
                                            var videoUrl = isVideo 
                                                ? Url.Action("Videos", "FileAccess", new { fileName = doc.OriginalFile }) 
                                                : "#";
                                
                                            var otherFileUrl = !isPdf && !isVideo 
                                                ? Url.Action("Originals", "FileAccess", new { docType = doc.DocType, fileName = doc.OriginalFile }) 
                                                : "#";

                                            <tr class="deletion-row align-middle" data-doc-id="@doc.Id" data-doc-name="@doc.OriginalFile">
                                                <td class="fw-bold text-danger">@doc.SopNumber</td>
                                                <td>
                                                    <div class="d-flex align-items-start">
                                                        <i class="fas fa-file-alt text-danger me-2 mt-1"></i>
                                                        <div>
                                                            <div class="fw-medium text-truncate" style="max-width: 250px;" 
                                                                 title="@doc.OriginalFile" data-bs-toggle="tooltip">
                                                                @doc.OriginalFile
                                                            </div>
                                                            <small class="text-muted d-block">
                                                                <i class="far fa-calendar me-1"></i>
                                                                Uploaded: @doc.UploadDate.ToString("MMM dd, yyyy")
                                                            </small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="text-truncate" style="max-width: 120px;" 
                                                         title="@doc.DeletionRequestedBy" data-bs-toggle="tooltip">
                                                        @doc.DeletionRequestedBy
                                                    </div>
                                                    <small class="text-muted d-block">
                                                        <i class="far fa-clock me-1"></i>
                                                        @doc.LastReviewDate?.ToString("MMM yyyy")
                                                    </small>
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge bg-secondary rounded-pill px-3 py-1">
                                                        v@(doc.Revision)
                                                    </span>
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25 px-3 py-1">
                                                        @doc.Department
                                                    </span>
                                                </td>
                                                <td class="text-center">
                                                    <div class="deletion-reason-container">
                                                        <div class="text-truncate deletion-reason-preview" 
                                                             style="max-width: 200px;"
                                                             title="@doc.DeletionReason"
                                                             data-bs-toggle="tooltip">
                                                            @if (!string.IsNullOrEmpty(doc.DeletionReason))
                                                            {
                                                                if (doc.DeletionReason.Length > 60)
                                                                {
                                                                    @doc.DeletionReason.Substring(0, 60)<text>...</text>
                                                                }
                                                                else
                                                                {
                                                                    @doc.DeletionReason
                                                                }
                                                            }
                                                        </div>
                                                        @if (!string.IsNullOrEmpty(doc.DeletionReason) && doc.DeletionReason.Length > 60)
                                                        {
                                                            <button type="button" 
                                                                    class="btn btn-sm btn-link text-decoration-none p-0 mt-1 view-reason-btn"
                                                                    data-bs-toggle="popover"
                                                                    data-bs-placement="left"
                                                                    data-bs-content="@doc.DeletionReason"
                                                                    title="Full Deletion Reason">
                                                                <small><i class="fas fa-expand-alt me-1"></i>View full reason</small>
                                                            </button>
                                                        }
                                                    </div>
                                                </td>
                                                <td class="text-center">
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        @if (isPdf)
                                                        {
                                                            <button type="button" 
                                                                    class="btn btn-outline-primary preview-document-btn"
                                                                    data-pdf-url="@pdfUrl"
                                                                    title="Preview Document">
                                                                <i class="fas fa-eye"></i>
                                                            </button>
                                                        }
                                                        else if (isVideo)
                                                        {
                                                            <button type="button" 
                                                                    class="btn btn-outline-primary play-video-btn"
                                                                    data-video-url="@videoUrl"
                                                                    title="Preview Video">
                                                                <i class="fas fa-play"></i>
                                                            </button>
                                                        }
                                                        else
                                                        {
                                                            <a href="@otherFileUrl" target="_blank" 
                                                               class="btn btn-outline-primary"
                                                               title="Preview File">
                                                                <i class="fas fa-external-link-alt"></i>
                                                            </a>
                                                        }
                                            
                                                        <a asp-action="History" asp-route-docRegisterId="@doc.Id" 
                                                           class="btn btn-outline-secondary"
                                                           title="View Document History">
                                                            <i class="fas fa-history"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                                <td class="text-center">
                                                    <div class="action-buttons d-flex justify-content-center gap-2">
                                                        @* Approve Deletion - More prominent danger button *@
                                                        <form asp-action="ApproveDeletion" method="post" class="approve-deletion-form d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="id" value="@doc.Id" />
                                                            <button type="submit" 
                                                                    class="btn btn-sm btn-danger approve-deletion-btn"
                                                                    title="Approve Permanent Deletion"
                                                                    data-doc-name="@doc.OriginalFile">
                                                                <i class="fas fa-trash-alt me-1"></i> 
                                                            </button>
                                                        </form>
                                            
                                                        @* Reject Deletion *@
                                                        <form asp-action="RejectDeletion" method="post" class="reject-deletion-form d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="id" value="@doc.Id" />
                                                            <button type="submit" 
                                                                    class="btn btn-sm btn-success reject-deletion-btn"
                                                                    title="Reject Deletion - Keep Document"
                                                                    data-doc-name="@doc.OriginalFile">
                                                                <i class="fas fa-times me-1"></i> Keep
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                    
                           <div class="card-footer bg-light border-top">
                                <div class="row align-items-center">
                                    <div class="col-md-4">
                                        <small class="text-muted">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Total: @Model.PendingDeletions.Count document(s) pending deletion
                                        </small>
                                    </div>
                                    <div class="col-md-8 text-end">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-outline-danger btn-sm" id="selectAllDeletions">
                                                <i class="fas fa-check-square me-1"></i> Select All
                                            </button>
                                            <button type="button" class="btn btn-outline-secondary btn-sm" id="deselectAllDeletions">
                                                <i class="fas fa-square me-1"></i> Deselect All
                                            </button>
                                            <button type="button" class="btn btn-danger btn-sm ms-2" id="deleteAllSelected" disabled>
                                                <i class="fas fa-trash-alt me-1"></i> Delete All Selected
                                                <span class="badge bg-white text-danger ms-1" id="selectedCount">0</span>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <div class="mb-3">
                                    <i class="fas fa-check-circle fa-3x text-success"></i>
                                </div>
                                <h4 class="text-muted mb-2">No Pending Deletions</h4>
                                <p class="text-muted">All documents are properly maintained.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            @* Confirmation Modal for Deletions *@
            <div class="modal fade" id="confirmDeletionModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header bg-danger text-white">
                            <h5 class="modal-title">
                                <i class="fas fa-exclamation-triangle me-2"></i>Confirm Permanent Deletion
                            </h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to permanently delete:</p>
                            <p class="fw-bold" id="documentToDeleteName"></p>
                            <div class="alert alert-danger">
                                <i class="fas fa-skull-crossbones me-2"></i>
                                <strong>Warning:</strong> This action cannot be undone. The document will be permanently removed from the system.
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                <i class="fas fa-times me-1"></i> Cancel
                            </button>
                            <button type="button" class="btn btn-danger" id="confirmDeletionBtn">
                                <i class="fas fa-trash-alt me-1"></i> Delete Permanently
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            @* Video Modal for Deletions *@
            <div class="modal fade" id="deletionVideoModal" tabindex="-1">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header bg-danger text-white">
                            <h5 class="modal-title">
                                <i class="fas fa-video me-2"></i>Video Preview - Pending Deletion
                            </h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body text-center">
                            <video id="deletionVideoPlayer" controls style="max-width: 100%;">
                                Your browser does not support the video tag.
                            </video>
                        </div>
                    </div>
                </div>
            </div>
        }

    }
    else if (User.Identity.IsAuthenticated)
    {
        <div class="alert alert-warning">
            <i class="fas fa-lock me-2"></i>You don't have permission to view approval requests.
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-sign-in-alt me-2"></i>Please 
            <a asp-controller="Account" asp-action="Login">login</a> to access this page.
        </div>
    }
</div>

<!-- Reject / Return Modal -->
