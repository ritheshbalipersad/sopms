        },
        
        initDeletionHandlers: function() {
            // Handle individual deletion approval
            document.querySelectorAll('.approve-deletion-btn').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    e.preventDefault();
                    const form = e.target.closest('.approve-deletion-form');
                    const docName = btn.dataset.docName;
                    
                    if (!form || !docName) {
                        console.error('Missing form or document name');
                        return;
                    }
                    
                    this.confirmDeletion(form, docName);
