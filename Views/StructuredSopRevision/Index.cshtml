@model IEnumerable<SOPMSApp.Models.StructuredSop>

<h2>Approved SOP List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>SOP Number</th>
            <th>Title</th>
            <th>Department</th>
            <th>Revision</th>
            <th>Effective Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SopNumber</td>
                <td>@item.Title</td>
                <td>@item.ControlledBy</td>
                <td>@item.Revision</td>
                <td>@item.EffectiveDate.ToString("yyyy-MM-dd")</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                        <i class="fas fa-eye me-1"></i> View
                    </a>
                    <!-- Edit Button -->
                    <a asp-controller="StructuredSopRevision" asp-action="Edit" asp-route-id="@item.Id"
                       class="btn btn-sm btn-warning text-dark"
                       title="Edit"
                       data-bs-toggle="tooltip">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger me-1"
                       onclick="return confirm('Are you sure you want to delete this item?');">
                        <i class="fas fa-trash-alt me-1"></i> Delete
                    </a>
                  
                </td>
            </tr>
        }
    </tbody>
</table>